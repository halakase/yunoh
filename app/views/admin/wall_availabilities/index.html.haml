- @title = "Listing wall_availabilities"

- content_for :description do
  %p Edit this template in app/views/WallAvailabilities/index.html.haml.

- content_for :actions do
  = link_to new_admin_wall_availability_path, class: 'btn btn-primary btn-large pull-right' do
    = fa_icon_tag "plus"
    Add Wall availability

.container
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      .sheet.sheet-condensed
        .sheet-inner
          %table.table
            %thead
              %tr
                %th
            %tbody
            - @wall_availabilities.each do |wall_availability|
              %tr
                %td.actions
                  = link_to fa_icon_tag("eye"), wall_availability, rel: 'tooltip', title: 'Show'
                  = link_to fa_icon_tag("pencil"), edit_wall_availability_path(wall_availability), rel: 'tooltip', title: 'Edit'
                  = link_to fa_icon_tag("trash"), wall_availability, rel: 'tooltip', title: 'Delete', data: { confirm: 'Are you sure?' }, method: :delete

            