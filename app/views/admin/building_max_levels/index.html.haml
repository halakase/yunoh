- @title = "Listing building_max_levels"

- content_for :description do
  %p Edit this template in app/views/BuildingMaxLevels/index.html.haml.

- content_for :actions do
  = link_to new_admin_building_max_level_path, class: 'btn btn-primary btn-large pull-right' do
    = fa_icon_tag "plus"
    Add Building max level

.container
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      .sheet.sheet-condensed
        .sheet-inner
          %table.table
            %thead
              %tr
                %th Name
                %th Townhall level
                %th Max level
                %th
            %tbody
            - @building_max_levels.each do |building_max_level|
              %tr
              %td= building_max_level.name
              %td= building_max_level.townhall_level
              %td= building_max_level.max_level
              %td
                = link_to(fa_icon_tag("eye"), admin_building_max_level_path(building_max_level), rel: 'tooltip', title: 'Show')
                = link_to fa_icon_tag("pencil"), edit_admin_building_max_level_path(building_max_level), rel: 'tooltip', title: 'Edit'
                = link_to fa_icon_tag("trash"), admin_building_max_level_path(building_max_level), rel: 'tooltip', title: 'Delete', data: { confirm: 'Are you sure?' }, method: :delete

            